<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data noupdate="1">
    <record id="purchase_organization_comp_rule" model="ir.rule">
        <field name="name">Purchase Organization Entry</field>
        <field name="model_id" ref="model_purchase_organization"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record id="ir_rule_allowed_purchasing_organizations" model="ir.rule">
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="domain_force">[('purchase_organization_id','in',[g.id for g in user.purchase_organization_ids])]</field>
        <field name="name">PO's from allowed purchase organizations</field>
        <field eval="0" name="global"/>
        <field eval="[(6,0,[ref('base.group_user')])]" name="groups"/>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
    </record>
</data>
</openerp>
