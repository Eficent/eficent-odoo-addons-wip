            <field name="inherit_id" ref="stock.stock_move_tree2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location_id']" position="before">
                    <field name="department_id"
                           on_change="onchange_department_id(department_id)"/>
                </xpath>
            </field>
        </record>

        <record id="view_move_department_form" model="ir.ui.view">
            <field name="name">stock.move.department.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="before">
                    <field name="department_id"
                           on_change="onchange_department_id(department_id)"/>
                </xpath>
                <xpath expr="//field[@name='picking_id']"
                       position="attributes">
                    <attribute name="on_change">onchange_picking_id(picking_id)</attribute>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
